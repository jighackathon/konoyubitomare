<p>
  <strong>Messages:</strong>
  <% @messages.each do |message| %>
      <%= message.user.email %>
      <%= message.content %>
  <% end %>
</p>

<p>
  <% unless @user_is_owner %>
    <%= button_to "参加", :action => "apply" %>
  <% end %>
</p>

